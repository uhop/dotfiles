#!/usr/bin/env bash

shopt -s expand_aliases

. ~/.local/bin/colors.sh

WARN="$BOLD$BRIGHT_WHITE$BG_BLUE"
PROMPT="$BOLD$BRIGHT_CYAN"
ERROR="$BOLD$BRIGHT_RED"

if [ -z "$1" ]; then
	echo "${ERROR}Usage: mount-raid <server-name>${RESET}"
	exit 1
fi

echo "${WARN}mount requires sudo: expect asking for the sudo password.${RESET}"
echo "${PROMPT}Run sudo mount...${RESET}"

command -v doas &>/dev/null && [ -f /etc/doas.conf ] && alias sudo='doas' || true

sudo mount -o {{ if eq .osIdLike "darwin" -}}noowners,tcp,rw,resvport,{{- end -}}hard,timeo=600,rsize=1048576,wsize=1048576 $1:/media/raid {{ if eq .osIdLike "darwin" -}}/Volumes/raid{{- else if eq .osIdLike "linux-debian" -}}/media/raid{{- end}}

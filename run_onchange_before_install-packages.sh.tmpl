brew "pyenv"
brew "python@3"
brew "q"
brew "ripgrep"
brew "rust"
brew "rust-analyzer"
brew "sd"
brew "shellcheck"
brew "sops"
brew "tealdeer"
brew "the_silver_searcher"
brew "tig"

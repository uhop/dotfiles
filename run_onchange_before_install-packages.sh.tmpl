#!/bin/bash

set -e

BRIGHT_CYAN=$(tput setaf 14)
BRIGHT_WHITE=$(tput setaf 15)
BG_BLUE=$(tput setab 4)
BOLD=$(tput bold)
RESET=$(tput op)

WARN="$BOLD$BRIGHT_WHITE$BG_BLUE"
PROMPT="$BOLD$BRIGHT_CYAN"

{{ if eq .osIdLike "linux-debian" -}}
echo "${WARN}Both apt and snap require sudo: expect asking for the sudo password.${RESET}"
echo "${PROMPT}Installing command line apps: sudo apt install...${RESET}"
sudo apt install -y build-essential bash-completion micro wget age mosh dialog \
  bat ncdu jq tmux silversearcher-ag tig httpie prettyping htop parallel fzf \
  brotli gh hub mc neofetch ripgrep duf hyperfine zoxide nginx shellcheck \
  grc golang rustc python3 net-tools firejail waypipe lnav
{{ if .hasGui -}}
echo "${PROMPT}Installing GUI apps: sudo apt install...${RESET}"
sudo apt install -y meld alacritty flatpak gnome-software-plugin-flatpak ttf-mscorefonts-installer firetools
{{- end }}
# sudo snap install bottom
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
echo "${PROMPT}Installing brew packages...${RESET}"
brew bundle --no-lock --file=/dev/stdin <<EOF
tap "homebrew/bundle"
{{ if .hasGui -}}tap "homebrew/cask-fonts"{{- end }}
tap "joerdav/xc"
brew "aws-iam-authenticator"
brew "awscli"
brew "bash-git-prompt"
brew "bottom"
brew "broot"
brew "cheat"
brew "deno"
brew "diff-so-fancy"
brew "dog"
brew "dust"
brew "eza"
brew "fd"
brew "git-lfs"
brew "gping"
brew "helix"
brew "helm"
brew "kubernetes-cli"
brew "lazygit"
brew "nvm"
brew "pyenv"
brew "tealdeer"
brew "wabt"
brew "whalebrew"
brew "xc"
brew "xh"
brew "zig"
EOF
brew completions link
{{ if .hasGui -}}flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo{{- end }}

{{- else if eq .osIdLike "darwin" -}}
if [ -f /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -f /usr/local/bin/brew ]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi
echo "${PROMPT}Installing brew packages...${RESET}"
brew bundle --no-lock --file=/dev/stdin <<EOF
tap "homebrew/bundle"
{{ if .hasGui -}}tap "homebrew/cask-fonts"{{- end }}
tap "joerdav/xc"
brew "aws-iam-authenticator"
brew "awscli"
brew "bash-completion"
brew "bash-git-prompt"
brew "bat"
brew "bottom"
brew "broot"
brew "brotli"
brew "cheat"
brew "deno"
brew "dialog"
brew "diff-so-fancy"
brew "dog"
brew "duf"
brew "dust"
brew "eza"
brew "fd"
brew "fzf"
brew "gh"
brew "git"
{{ if .hasGui -}}brew "git-gui"{{- end }}
brew "git-lfs"
brew "go"
brew "gping"
brew "grc"
brew "helix"
brew "helm"
brew "htop"
brew "httpie"
brew "hub"
brew "hyperfine"
brew "jq"
brew "kubernetes-cli"
brew "lazygit"
brew "lnav"
brew "micro"
brew "midnight-commander"
brew "mosh"
brew "ncdu"
brew "nginx"
brew "neofetch"
brew "nvm"
brew "parallel"
brew "prettyping"
brew "pyenv"
brew "python@3"
brew "ripgrep"
brew "rust"
brew "shellcheck"
brew "tealdeer"
brew "the_silver_searcher"
brew "tig"
brew "tmux"
brew "wabt"
brew "wget"
brew "whalebrew"
brew "xc"
brew "xh"
brew "zig"
brew "zoxide"
{{ if .hasGui -}}cask "alacritty"{{- end }}
{{ if .hasGui -}}cask "font-fira-code-nerd-font"{{- end }}
{{ if .hasGui -}}cask "font-hack-nerd-font"{{- end }}
{{ if .hasGui -}}cask "meld"{{- end }}
EOF
{{- end }}

if command -v tmux &> /dev/null; then
  if [ ! -f "$HOME/.config/tmux/plugins/tpm/tpm" ]; then
    echo "${PROMPT}Installing tmux plugin manager...${RESET}"
    git clone https://github.com/tmux-plugins/tpm "$HOME/.config/tmux/plugins/tpm"
  fi
fi

echo "${PROMPT}Installing the latest stable Node...${RESET}"
. "$(brew --prefix nvm)/nvm.sh"
nvm install stable

if ! command -v bun &> /dev/null; then
  echo "${PROMPT}Installing Bun...${RESET}"
  curl -fsSL https://bun.sh/install | bash
fi
